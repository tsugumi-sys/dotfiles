# This is Git's per-user configuration file.
[user]
	name = Akira Noda
	email = akira.noda@onecareer.com
# Please adapt and uncomment the following lines:
#	name = Akira Noda
#	email = akira.noda@onecareer.jp
[pull]
	rebase = false

[core]
    pager = delta
	editor = hx

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true

[merge]
    conflictstyle = diff3

[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true

[diff]
  tool = difftastic
  external = difft
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
